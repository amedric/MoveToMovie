{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <form action="" method="post">
            <div class="row">
                <div class="col">
                    <h3 class="title">billing address</h3>

                    <div class=" inputBox">
                        <label for="name">Full name : </label>
                        <input type="text" name="name">
                    </div>

                    <div class="inputBox">
                        <label for="email"> Email :</label>
                        <input type="email" name="email">
                    </div>

                    <div class="inputBox">
                        <label for="address"> Address : </label>
                        <input type="text" name="address">
                    </div>


                    <div class="inputBox">
                        <label for="city"> City : </label>
                        <input type="text" name="city">
                    </div>


                    <div class="flex">
                        <div class="inputBox">
                            <label for="country"> Country :</label>
                            <input type="text" name="country" placeholder="France">
                        </div>

                        <div class="inputBox">
                            <label for="zip">Zip code :</label>
                            <input type="zip" placeholder="33000">
                        </div>
                    </div>

                    <div>

                        <label for="arrival-date">Date of arrival :</label>
                        <input type="date" name="arrival-date">
                    </div>
                    <br>
                    <div>
                        <label for="departure-date">Date of departure :</label>
                        <input type="date" name="departure-date">
                    </div>
                    <br/>

                    <div class="button">
                            <button type="submit" class="submit">BOOK</button>
                    </div>

                    <br>
                    <input type="checkbox" id="terms">
                    <label for="terms">I have read and agreed with
                        <a href="">the terms and conditions.</a></label>

                </div>
            </div>
    </div>

    </form>
    </div>
{% endblock %}





